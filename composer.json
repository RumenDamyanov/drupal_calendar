{
  "name": "rumenx/drupal_calendar",
  "description": "Drupal 11+ module for calendar event creation, ICS generation, and event management.",
  "type": "drupal-module",
  "license": "MIT",
  "authors": [
    {
      "name": "Rumen Damyanov",
      "email": "contact@rumenx.com"
    }
  ],
  "require": {
    "php": ">=8.3",
    "drupal/core": "^11.0",
    "rumenx/php-calendar": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "drupal/coder": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "Drupal\\drupal_calendar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drupal\\drupal_calendar\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "scripts": {
    "lint": "vendor/bin/phpcs --standard=Drupal src/",
    "test": "vendor/bin/phpunit --testsuite Unit --coverage-text"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
