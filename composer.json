{
  "name": "drupal/drupal_calendar",
  "description": "Drupal 11 module for calendar event creation, ICS generation, and event management.",
  "type": "drupal-module",
  "require": {
    "php": ">=8.3",
    "rumenx/php-calendar": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "drupal/coder": "^8.3"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Drupal\\drupal_calendar\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --testsuite Unit",
    "coverage": "phpunit --testsuite Unit --coverage-text",
    "lint": "phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme src/"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
